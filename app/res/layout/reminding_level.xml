<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <ScrollView
        android:id="@+id/level_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#a8d4f2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_layout"
            android:orientation="vertical" >
            <TextView
    android:id="@+id/level_prompt"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:gravity="center"
    android:background="#a8d4f2"
    android:textColor="#304e62"
    android:layout_marginBottom="1dp"
    android:textSize="14sp"
    android:text="@string/level_prompt" />

<RelativeLayout
        android:id="@+id/level_bubble_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#e4f2fe" >

        <TextView
            android:id="@+id/level_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/level_bubble"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="#304e62" />

        <ImageView
            android:id="@+id/level_bubble_tick"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:contentDescription="@string/level_bubble"
            android:layout_marginRight="4dp"
            android:src="@drawable/switch_0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#304e62" />
    </RelativeLayout>
    
<RelativeLayout
        android:id="@+id/level_notification_center_layout"
