            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="#304e62" />

        <ImageView
            android:id="@+id/level_vibrate_tick"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:contentDescription="@string/level_vibrate"
            android:layout_marginRight="4dp"
            android:src="@drawable/switch_0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#304e62" />
    </RelativeLayout>

<RelativeLayout
        android:id="@+id/level_sound_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#e4f2fe" >

        <TextView
            android:id="@+id/level_sound_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/level_sound"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="#304e62" />

        <ImageView
            android:id="@+id/level_sound_tick"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:contentDescription="@string/level_sound"
            android:layout_marginRight="4dp"
            android:src="@drawable/switch_0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#304e62" />
    </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
