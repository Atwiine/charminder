<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
    android:id="@+id/reminderslist_prompt"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:gravity="center"
    android:background="#a8d4f2"
    android:textColor="#304e62"
    android:layout_marginBottom="1dp"
    android:textSize="14sp"
    android:text="@string/reminderslist_prompt" />
            <RelativeLayout
            android:id="@+id/reminder_layout"
            android:layout_width="match_parent"
            android:background="#e4f2fe"
            android:layout_height="64dp" >

            <TextView
                android:id="@+id/reminder_type"
                android:layout_width="92dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="计时提醒"
                android:textColor="#304e62"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/reminder_type"
                android:gravity="center_vertical"
                android:text="2014年12月32日16时32分"
                android:textColor="#304e62"
                android:textSize="14sp" />

            <TextView
                android:layout_width="256dp"
                android:layout_height="24dp"
                android:layout_below="@+id/reminder_type"
                android:gravity="center_vertical"
                android:text="距离收到提醒还有：12时24分32秒"
                android:textColor="#304e62"
                android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
