<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
    android:layout_height="32dp"
    android:weightSum="2">
    <LinearLayout android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    android:layout_height="match_parent"
     android:weightSum="13"
    android:background="#c02020" >

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitEnd"
        android:layout_weight="6"
        android:src="@drawable/delete" />
    
    <TextView
	    android:id="@+id/delete_text"
	    android:layout_width="0dp"
	    android:layout_height="24dp"
        android:layout_marginTop="4dp"
	    android:gravity="center_vertical"
	    android:layout_weight="7"
	    android:text="@string/delete"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    android:layout_height="match_parent"
     android:weightSum="13"
    android:background="#304e62" > 

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitEnd"
        android:layout_weight="6"
        android:src="@drawable/edit" />
    
    <TextView
	    android:id="@+id/edit_text"
	    android:layout_width="0dp"
	    android:layout_height="24dp"
        android:layout_marginTop="4dp"
	    android:gravity="center_vertical"
	    android:layout_weight="7"
	    android:text="@string/edit"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/main_section_layout"
    android:background="#188080" >
    <RelativeLayout android:layout_width="match_parent"
    				android:layout_height="32dp"
   					android:layout_marginTop="4dp"
        ><ImageView
                    android:id="@+id/calendar_icon"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
    				android:layout_marginLeft="8dp"
   					android:layout_marginTop="4dp"
   					android:layout_marginBottom="4dp"
                    android:src="@drawable/calendar" />
	<TextView
	    android:id="@+id/text_date"
	    android:layout_width="wrap_content"
	    android:layout_height="24dp"
	    android:layout_alignTop="@+id/calendar_icon"
	    android:layout_toRightOf="@+id/calendar_icon"
	    android:gravity="center_vertical"
	    android:text="@string/date_added"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" /></RelativeLayout>
	
	<RelativeLayout android:layout_width="match_parent"
    				android:layout_height="32dp"
        >
	<ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
    				android:layout_marginLeft="8dp"
   					android:layout_marginTop="4dp"
   					android:layout_marginBottom="4dp"
                    android:src="@drawable/time" />
	<TextView
	    android:id="@+id/text_time"
	    android:layout_width="wrap_content"
	    android:layout_height="24dp"
	    android:layout_alignTop="@+id/time_icon"
	    android:layout_toRightOf="@+id/time_icon"
	    android:gravity="center_vertical"
	    android:text="@string/time_added"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" />
	</RelativeLayout>
	
	<RelativeLayout android:layout_width="match_parent"
    				android:layout_height="32dp"
    				 android:id="@+id/remindingtime_layout"
        >
	<ImageView
                    android:id="@+id/remindingtime_icon"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
    				android:layout_marginLeft="8dp"
   					android:layout_marginTop="4dp"
   					android:layout_marginBottom="4dp"
                    android:src="@drawable/reminding_time" />
	<TextView
	    android:id="@+id/text_remindingtime"
	    android:layout_width="wrap_content"
	    android:layout_height="24dp"
	    android:layout_alignTop="@+id/remindingtime_icon"
	    android:layout_toRightOf="@+id/remindingtime_icon"
	    android:gravity="center_vertical"
	    android:text="@string/time_to_remind"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" />
	</RelativeLayout>
	
	<RelativeLayout android:layout_width="match_parent"
    				android:layout_height="32dp"
    				 android:id="@+id/event_location_layout"
        >
	<ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
    				android:layout_marginLeft="8dp"
   					android:layout_marginTop="4dp"
   					android:layout_marginBottom="4dp"
                    android:src="@drawable/location_w" />
	<TextView
	    android:id="@+id/text_location"
	    android:layout_width="wrap_content"
	    android:layout_height="24dp"
	    android:layout_alignTop="@+id/location_icon"
	    android:layout_toRightOf="@+id/location_icon"
	    android:gravity="center_vertical"
	    android:text="@string/event_location"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" />
	</RelativeLayout>
	
	<RelativeLayout android:layout_width="match_parent"
    				android:layout_height="32dp"
        >
	<ImageView
                    android:id="@+id/level_icon"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
    				android:layout_marginLeft="8dp"
   					android:layout_marginTop="4dp"
   					android:layout_marginBottom="4dp"
                    android:src="@drawable/level_w" />
	<TextView
	    android:id="@+id/text_level"
	    android:layout_width="wrap_content"
	    android:layout_height="24dp"
	    android:layout_alignTop="@+id/level_icon"
	    android:layout_toRightOf="@+id/level_icon"
	    android:gravity="center_vertical"
	    android:text="@string/level"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" />
	<ImageView
                    android:id="@+id/reminderlist_level_star1"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
	  				android:layout_toRightOf="@+id/text_level"
	    			android:layout_alignTop="@+id/level_icon"
    				android:layout_marginLeft="0dp"
                    android:src="@drawable/level_w" />
	
	<ImageView
                    android:id="@+id/reminderlist_level_star2"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
	    			android:layout_alignTop="@+id/level_icon"
	  				android:layout_toRightOf="@+id/text_level"
    				android:layout_marginLeft="32dp"
                    android:src="@drawable/level_w" />
	
	<ImageView
                    android:id="@+id/reminderlist_level_star3"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
	  				android:layout_toRightOf="@+id/text_level"
	    			android:layout_alignTop="@+id/level_icon"
    				android:layout_marginLeft="64dp"
                    android:src="@drawable/level_w" />
	
	<ImageView
                    android:id="@+id/reminderlist_level_star4"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
	  				android:layout_toRightOf="@+id/text_level"
	    			android:layout_alignTop="@+id/level_icon"
    				android:layout_marginLeft="96dp"
                    android:src="@drawable/level_w" />
	
	<ImageView
                    android:id="@+id/reminderlist_level_star5"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
	  				android:layout_toRightOf="@+id/text_level"
	    			android:layout_alignTop="@+id/level_icon"
    				android:layout_marginLeft="128dp"
                    android:src="@drawable/level_w" />
	</RelativeLayout>
	<RelativeLayout android:layout_width="match_parent"
    				android:layout_height="wrap_content"
   					android:layout_marginBottom="8dp"
        >
	<ImageView
                    android:id="@+id/content_icon"
                    android:layout_width="24dp"
    				android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
    				android:layout_marginLeft="8dp"
   					android:layout_marginTop="4dp"
                    android:src="@drawable/content" />
	<TextView
	    android:id="@+id/text_content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
   					android:layout_marginTop="4dp"
	    android:layout_alignTop="@+id/content_icon"
	    android:layout_toRightOf="@+id/content_icon"
	    android:gravity="center_vertical"
	    android:text="@string/content"
	    android:textColor="#e4f2fe"
	    android:textSize="14sp" />
</RelativeLayout>
</LinearLayout>
</LinearLayout>
